@target(deps=[f":{k}" for k in texts.keys()], default=True)
def cat():
    sh.exec(f"rm out.md || exit 0")
    for k in texts.keys():
        text = sh.output(f"cat {k}.md").strip()
        sh.exec(f"echo \"{text}\" >>out.md")
